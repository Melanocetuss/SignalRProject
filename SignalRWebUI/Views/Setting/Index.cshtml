@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarlari</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Şifre ve Bilgi Güncelleme Sayfası</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname" class="form-label">Adınız</label>
                                <input type="text" class="form-control" id="categoryname" asp-for="Name" placeholder="Adınızı giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="categoryname" class="form-label">Soyadınız</label>
                                <input type="text" class="form-control" id="categoryname" asp-for="Surname" placeholder="Soyadınızı giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="categoryname" class="form-label">Mailiniz</label>
                                <input type="email" class="form-control" id="categoryname" asp-for="Email" placeholder="Mailiniz giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="categoryname" class="form-label">Kullanıcı Adınız</label>
                                <input type="text" class="form-control" id="categoryname" asp-for="Username" placeholder="Kullanıcı Adınızı giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="categoryname" class="form-label">Şifreniz</label>
                                <input type="password" class="form-control" id="categoryname" asp-for="Password" placeholder="Şifrenizi giriniz...">
                            </div>
                            <div class="form-group">
                                <label for="categoryname" class="form-label">Şifrenizi Tekrar Giriniz</label>
                                <input type="password" class="form-control" id="categoryname" asp-for="ConfirmPassword" placeholder="Şifrenizi giriniz...">
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success">Profili Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>