@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Melanocetus Restoran Kayıt</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/Sauce.jpg" alt="form" style="width:484px; height:600px;">
			</div>
			<form class="form-detail" method="post">
				<h2>Yeni Kullanıcı Kaydı</h2>
				<div class="form-row">
					<input type="text" name="Name" id="Name" class="input-text" placeholder="Adınız" required asp-for="Name">
				</div>
				<div class="form-row">
					<input type="text" name="Surname" id="full-name" class="input-text" placeholder="Soyadınız" required asp-for="Surname">
				</div>
				<div class="form-row">
					<input type="text" name="Username" id="full-name" class="input-text" placeholder="Kullanıcı Adınız" required asp-for="Username">
				</div>
				<div class="form-row">
					<input type="email" name="your-email" id="your-email" class="input-text" placeholder="Email Adresiniz" required asp-for="Email">
				</div>
				<div class="form-row">
					<input type="password" name="password" id="password" class="input-text" placeholder="Şifreniz" required asp-for="Password">
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kaydet Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>
