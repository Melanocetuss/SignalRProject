@model UpdateMenuTableDto
@{
    ViewData["Title"] = "UpdateMenuTable";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşelemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Masa Girişi</div>
						</div>
						<div class="card-body">

							<input type="hidden" asp-for="MenuTableID"/>
							<div class="form-group">
								<label for="categoryname">Masa Adı Giriniz</label>
								<input type="text" class="form-control" id="categoryname" asp-for="Name">
							</div>

							<input type="hidden" readonly asp-for="Status" value="false" />

							<div class="card-action">
								<button class="btn btn-primary">Masayı Ekle</button>
							</div>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>		