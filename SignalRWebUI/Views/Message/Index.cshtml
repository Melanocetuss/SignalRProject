@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="food_section py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="mt-3 p-3 border rounded-4" style="border: 1px solid #FFD700;">

                    <!-- Message List -->
                    <div class="mb-3 p-3 border rounded-4"
                         style="max-height: 300px; overflow-y: auto; background-color: #fff; border: 1px solid #ddd;">
                        <ul class="list-group" id="messagelist"
                            style="display: flex; flex-direction: column; list-style: none; padding: 0; margin: 0;">
                        </ul>
                    </div>

                    <!-- Username Input -->
                    <div class="mb-3">
                        <label class="form-label">Kullanıcı Adınız:</label>
                        <input type="text" class="form-control" id="userinput" placeholder="Kullanıcı adınızı girin" />
                    </div>

                    <!-- Message Input -->
                    <div class="mb-3">
                        <label class="form-label">Mesajınız:</label>
                        <textarea class="form-control" id="messageinput" placeholder="Mesajınızı yazın" rows="3"></textarea>
                    </div>

                    <!-- Send Button -->
                    <div class="d-grid gap-2">
                        <button class="btn text-white" id="sendbutton" style="background-color: #FFD700; border-color: #FFD700;">Mesaj Gönder</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CSS for Colors -->
<style>
    .username {
        color: #FFD700; /* Sarı */
        font-weight: bold;
    }

    .timestamp {
        color: #007BFF; /* Mavi */
        font-weight: bold;
    }
</style>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="~/js/chat.js"></script>