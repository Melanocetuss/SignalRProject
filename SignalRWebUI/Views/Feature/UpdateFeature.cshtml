@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşelemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
						</div>
						<input type="hidden" asp-for="FeatureID"/>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Başlık 1</label>
								<input type="text" class="form-control" id="categoryname" asp-for="FirstTitle">
							</div>
							<div class="form-group">
								<label for="categoryname">Açıklama 1</label>
								<input type="text" class="form-control" id="categoryname" asp-for="FirstDescription">
							</div>
							<div class="form-group">
								<label for="categoryname">Başlık 2</label>
								<input type="text" class="form-control" id="categoryname" asp-for="SecondTitle">
							</div>
							<div class="form-group">
								<label for="categoryname">Açıklama 2</label>
								<input type="text" class="form-control" id="categoryname" asp-for="SecondDescription">
							</div>
							<div class="form-group">
								<label for="categoryname">Başlık 3</label>
								<input type="text" class="form-control" id="categoryname" asp-for="ThirtTitle">
							</div>
							<div class="form-group">
								<label for="categoryname">Açıklama 3</label>
								<input type="text" class="form-control" id="categoryname" asp-for="ThirtDescription">
							</div>

							<div class="card-action">
								<button class="btn btn-primary">Öne Çıkan Alan Ekle</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>