@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Öne Çıkan Alan Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ana Sayfada Öne Çıkan Alan İle İlgili İşlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık 1</th>
									<th scope="col">Açıklama 1</th>
									<th scope="col">Başlık 2</th>
									<th scope="col">Açıklama 2</th>
									<th scope="col">Başlık 3</th>
									<th scope="col">Açıklama 3</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.FirstTitle</td>
										<td>@item.FirstDescription</td>
										<td>@item.SecondTitle</td>
										<td>@item.SecondDescription</td>
										<td>@item.ThirtTitle</td>
										<td>@item.ThirtDescription</td>
										<td><a href="/Feature/RemoveFeature/@item.FeatureID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
										<td><a href="/Feature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Öne Çıkan Alan Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>