@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Günün İndirimleri Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün İndirimli Ürünleri Aşağıda Yer Almaktadır. Tema Bütünlüğü İçin <strong>2 Adet</strong> İndirimli Ürün Seçiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Resim Ve Ürün Adı</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durum</th>
									<th scope="col">Aktif Et</th>
									<th scope="col">Pasif Et</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td><img src="@item.ImageUrl" width="50" height="50" style="margin-right:10px" />@item.Title</td>
										<td>@item.Amount %</td>
										<td>
											@if(item.Status == true)
											{
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Pasif</span>
											} 
										</td>
										<td><a href="/Discount/ChangeStatusToTrue/@item.DiscountID" class="btn btn-outline-info btn-rounded">Aktif Et</a></td>
										<td><a href="/Discount/ChangeStatusToFalse/@item.DiscountID" class="btn btn-outline-dark btn-rounded">Pasif Et</a></td>
										<td><a href="/Discount/RemoveDiscount/@item.DiscountID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
										<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Discount/CreateDiscount/" class="btn btn-primary">Yeni İndirimli Ürün Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>