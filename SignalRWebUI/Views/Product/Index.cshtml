@model List<ResultProductWithCategoriesDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ürün İle İlgili İşlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Resim Ve Ürün Adı</th>
									<th scope="col">Fiyat</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td><img src="@item.ImageUrl" width="50" height="50" style="margin-right:10px" />@item.Name</td>
										<td>@item.Price ₺</td>
										<td>@item.CategoryName</td>
										<td>@item.Status</td>
										<td><a href="/Product/RemoveProduct/@item.ProductID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-primary">Yeni Ürüm Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>