@model List<ResultBasketDto>
@{
    ViewData["Title"] = "Sepetiniz";
    Layout = "~/Views/UILayout/Index.cshtml";
    decimal basketTotalPrice = Model.Sum(x => x.TotalPrice);
    decimal kdv = basketTotalPrice * 0.10m;
    decimal totalWithKdv = basketTotalPrice + kdv;
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav class="breadcrumb bg-light p-3 rounded">
        <a class="breadcrumb-item text-dark" href="/Default/Index/">Ana Sayfa</a>
        <a class="breadcrumb-item text-dark" href="/Menu/Index/">Menü</a>
        <span class="breadcrumb-item active">Sepetiniz</span>
    </nav>

    <div class="row">
        <!-- Basket Table -->
        <div class="col-lg-9 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white text-center">
                    <h4>Sepetiniz</h4>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover text-center">
                            <thead class="bg-dark text-white">
                                <tr>
                                    <th>Ürün</th>
                                    <th>Ürün Adı</th>
                                    <th>Adet</th>
                                    <th>Fiyat</th>
                                    <th>Toplam</th>
                                    <th>İptal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {                                    
                                    <tr>
                                        <td><img src="@item.ProductImageUrl" class="img-fluid rounded" width="65" height="65" /></td>
                                        <td>@item.ProductName</td>
                                        <td>
                                            <div class="d-flex justify-content-center align-items-center">
                                                <a href="/Basket/DecreaseProductCount/@item.BasketID" class="btn btn-sm btn-outline-danger" style="min-width: 36px;">-</a>
                                                <span class="mx-2">@item.Count</span>
                                                <a href="/Basket/IncreaseProductCount/@item.BasketID" class="btn btn-sm btn-outline-warning" style="min-width: 36px;">+</a>
                                            </div>
                                        </td>
                                        <td>@item.Price</td>
                                        <td>@item.TotalPrice TL</td>
                                        <td class="text-center">
                                            <a href="/Basket/RemoveBasket/@item.BasketID" class="btn btn-sm btn-danger btn-delete" style="min-width: 36px;">
                                                <i class="fa fa-times"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sidebar -->
        <div class="col-lg-3">
            <!-- Coupon Code -->
            <div class="p-3 shadow-sm bg-light rounded mb-4">
                <h6 class="text-center text-dark">Kupon Kodu</h6>
                <div class="input-group">
                    <input type="text" id="couponcode" class="form-control" placeholder="Kupon Kodunuz">
                    <div class="input-group-append">
                        <button class="btn btn-warning" id="btncouponcode">Uygula</button>
                    </div>
                </div>
            </div>
            <!-- Order Summary -->
            <div class="card shadow-sm p-3">
                <h5 class="section-title text-center bg-warning text-white p-2 rounded">Sepet Özeti</h5>
                <div class="p-3">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Toplam Tutar</h6>
                        <h6><span id="totalprice">@basketTotalPrice.ToString("F2")</span> TL</h6>
                    </div>
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <h6>KDV Tutarı</h6>
                        <h6><span id="kdv">@kdv.ToString("F2")</span> TL</h6>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <h5>Toplam</h5>
                        <h5><span id="totalpricewithkdv">@totalWithKdv.ToString("F2")</span> TL</h5>
                    </div>
                </div>
                <button id="btnchecked" class="btn btn-warning btn-block font-weight-bold">Siparişi Tamamla</button>
            </div>
        </div>
    </div>
</div>