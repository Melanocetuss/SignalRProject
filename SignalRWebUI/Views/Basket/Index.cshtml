@model List<ResultBasketDto>
@{
    ViewData["Title"] = "Sepetiniz";
    Layout = "~/Views/UILayout/Index.cshtml";
    int count = 0;
}

<div class="container py-5">
    <!-- Breadcrumb -->
    <nav class="breadcrumb bg-light p-3 rounded">
        <a class="breadcrumb-item text-dark" href="/Default/Index/">Ana Sayfa</a>
        <a class="breadcrumb-item text-dark" href="/Menu/Index/">Menü</a>
        <span class="breadcrumb-item active">Sepetiniz</span>
    </nav>

    <div class="row">
        <!-- Basket Table -->
        <div class="col-lg-9 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white text-center">
                    <h4>Sepetiniz</h4>
                </div>
                <div class="card-body p-4">
                    <table class="table table-hover text-center">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th>#</th>
                                <th>Ürün</th>
                                <th>Ürün Adı</th>
                                <th>Adet</th>
                                <th>Fiyat</th>
                                <th>Toplam</th>
                                <th>İptal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td><img src="@item.ProductImageUrl" class="img-fluid rounded" width="65" height="65" /></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Count</td>
                                    <td>@item.Price TL</td>
                                    <td>@item.TotalPrice TL</td>
                                    <td>
                                        <button data-basketid="@item.BasketID" class="btn btn-sm btn-danger btn-delete">
                                            <i class="fa fa-times"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-3">
            <div class="card shadow-sm p-3">
                <h5 class="section-title text-center bg-warning text-white p-2 rounded">Sepet Özeti</h5>
                <div class="p-3">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Toplam Tutar</h6>
                        <h6><span id="totalprice">51</span> TL</h6>
                    </div>
                    <div class="d-flex justify-content-between border-bottom pb-2">
                        <h6>KDV Oranı</h6>
                        <h6><span id="kdv">8</span> TL</h6>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <h5>Toplam</h5>
                        <h5><span id="totalpricewithkdv">59</span> TL</h5>
                    </div>
                </div>
                <button id="btnchecked" class="btn btn-warning btn-block font-weight-bold">Siparişi Tamamla</button>
            </div>

            <!-- Coupon Code -->
            <div class="mt-4 p-3 shadow-sm bg-light rounded">
                <h6 class="text-center text-dark">Kupon Kodu</h6>
                <div class="input-group">
                    <input type="text" id="couponcode" class="form-control" placeholder="Kupon Kodunuz">
                    <div class="input-group-append">
                        <button class="btn btn-warning" id="btncouponcode">Uygula</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>