@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirimler İle İlgili İşlemleri aşağıdan gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Bildirim Açıklaması</th>
									<th scope="col">Bildirim Tarihi</th>
									<th scope="col">Durumu</th>
									<th scope="col">Okundu Olarak İşaretle</th>
									<th scope="col">Okunmadı Olarak İşaretle</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>

								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Description</td>
										<td>@item.Date.ToShortDateString()</td>
										<td>
                                            @if (item.Status == true)
                                            {
                                                <span class="badge badge-info">Okundu</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-dark">Okunmadı</span>
                                            }
										</td>										
										<td><a href="/Notification/NotificationStatusChangeTrue/@item.NotificationID" class="btn btn-outline-warning btn-rounded">Okundu</a></td>
										<td><a href="/Notification/NotificationStatusChangeFalse/@item.NotificationID" class="btn btn-outline-secondary btn-rounded">Okunmadı</a></td>
										<td><a href="/Notification/RemoveNotification/@item.NotificationID" class="btn btn-outline-danger btn-rounded">Sil</a></td>
										<td><a href="/Notification/UpdateNotification/@item.NotificationID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/Notification/CreateNotification/" class="btn btn-primary">Yeni Bildirim Ekle</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>