@model List<ResultMenuTableDto>
@{
    ViewData["Title"] = "CustomerTableList";
    Layout = "~/Views/UILayout/Index.cshtml";
    string color = "";
    string status = "";
}

<!-- MenuTable CSS -->
@await Component.InvokeAsync("_MenuTableCSSComponentPartial")

<br />
<br />
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-dark mb-30">
                <a class="breadcrumb-item text-white" href="/Default/Index">Ana Sayfa</a>
                <a class="breadcrumb-item text-white" href="/Menu/Index">Masa Listesi</a>
                <span class="breadcrumb-item text-warning active">Masa Seçimi Yapınız</span>
            </nav>
        </div>
    </div>
</div>
<div class="container">
    <div class="row px-xl-5" style="margin-right:10px">
        @foreach (var item in Model)
        {
            if (item.Status == false)
            {
                color = "widgettrue";
                status = "Masa Boş";
            }
            if (item.Status == true)
            {
                color = "widgetfalse";
                status = "Masa Dolu";
            }

            <div class="col-md-3 mb-4">
                <div class="@color">
                    @if (item.Status == true)
                    {
                        <div class="widget-icon">
                            <a href="/Basket/Index/@item.MenuTableID"><i class="fa-solid fa-cash-register"></i></a>
                        </div>

                    }
                    else
                    {
                        <div class="widget-icon">
                            <a href="/Menu/Index/@item.MenuTableID"> <i class="fas fa-chair"></i></a>
                        </div>

                    }
                    <div class="widget-text">
                        <h3>@item.Name</h3>
                        <p>@status</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>