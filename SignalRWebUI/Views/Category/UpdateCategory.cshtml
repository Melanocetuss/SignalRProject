@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşelemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Kategori Girişi</div>
						</div>
						<div class="card-body">
							<input type="hidden" asp-for="CategoryID"/>
							<div class="form-group">
								<label for="categoryname">Kategori Adı Giriniz</label>
								<input type="text" class="form-control" id="categoryname" asp-for="Name">
							</div>

							<div class="card-action">
								<button class="btn btn-primary">Kategoriyi Güncelle</button>
							</div>

						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>		