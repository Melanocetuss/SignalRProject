@model CreateBookingDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Slider -->
@await Component.InvokeAsync("_DefaultSliderComponentPartial")

<!-- Offer -->
@await Component.InvokeAsync("_DefaultOfferComponentPartial")

<!-- Our Menu -->
@await Component.InvokeAsync("_DefaultOurMenuComponentPartial")

<!-- About -->
@await Component.InvokeAsync("_DefaultAboutComponentPartial")

<!-- Book A Table -->
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Masa Rezerve Et
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post">
                        <div>
                            <input type="text" class="form-control" placeholder="İsminiz" asp-for="Name" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="Phone" />
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Mail Adresiniz" asp-for="Email" />
                        </div>
                        <div>
                            <select class="form-control nice-select wide" asp-for="PersonCount">
                                <option value="" disabled selected>Kaç Kişisiniz ?</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <div>
                            <input type="date" class="form-control" asp-for="Date">
                        </div>
                        <input type="hidden" readonly value="Rezervasyon Alındı" asp-for="Description" />
                        <div class="btn_box">
                            <button>
                                Şimdi Rezervasyon Yap
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <iframe id="googleMap" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3126.7343821042978!2d27.099857076440777!3d38.4013901758174!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14bbd94aa3863591%3A0xb8be44383c6e3c14!2zQmFzxLFuIFNpdGVzaSwgxLBuw7Zuw7wgQ2QuIE5vOjM4MywgMzUxNTAgS2FyYWJhxJ9sYXIvxLB6bWly!5e0!3m2!1str!2str!4v1740534171271!5m2!1str!2str"></iframe>                   
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonial -->
@await Component.InvokeAsync("_DefaultTestimonialComponentPartial")